%div#modal_resolve_merge_conflict_info.modal.hide
  .modal-dialog
    .modal-content
      .modal-header
        %a.close{href: "#", "data-dismiss" => "modal"} Ã—
        %h3 How to resolve merge conflicts
      .modal-body
        - if @merge_request.for_fork?
          - source_remote = @merge_request.source_project.namespace.nil? ? "source" :@merge_request.source_project.namespace.path
          - target_remote = @merge_request.target_project.namespace.nil? ? "target" :@merge_request.target_project.namespace.path
          %p
            %strong Step 1.
            In the fork of this repo (#{@merge_request.source_project_path}), update the repo, checkout the branch we are merging from, and bring in the branch we are merging into
          %pre.dark
            :preserve
              git checkout -b #{@merge_request.target_project_path}-#{@merge_request.target_branch} #{@merge_request.source_branch}
              git pull #{@merge_request.target_project.http_url_to_repo} #{@merge_request.target_branch}
          %p
            %strong Step 2.
            Merge the target branch into the source branch, resolve the conflicts, and push the changes to GitLab
          %pre.dark
            :preserve
              git fetch origin
              git checkout #{@merge_request.source_branch}
              git reset origin/#{@merge_request.source_branch}
              git merge --no-ff #{@merge_request.target_project_path}-#{@merge_request.target_branch}
              git push -u origin #{@merge_request.source_branch}
        - else
          %p
            %strong Step 1.
            Update the repo and checkout the branch we are merging from
          %pre.dark
            :preserve
              git fetch origin
              git checkout #{@merge_request.source_branch}
              git reset origin/#{@merge_request.source_branch}
          %p
            %strong Step 2.
            Merge the target branch into the source branch, resolve the conflicts, and push the changes to GitLab
          %pre.dark
            :preserve
              git merge --no-ff origin/#{@merge_request.target_branch}
              git push -u origin #{@merge_request.source_branch}


:javascript
  $(function(){
    var modal = $('#modal_resolve_merge_conflict_info').modal({modal: true, show:false});
    $('.how_to_resolve_merge_conflict_link').bind("click", function(){
      modal.show();
    });
    $('.modal-header .close').bind("click", function(){
      modal.hide();
    })
  })
